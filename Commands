$> mkdir /tmp/emulated_tpm
$> swtpm socket --tpmstate dir=/tmp/emulated_tpm --ctrl type=unixio,path=/tmp/emulated_tpm/swtpm-sock --log level=20 --tpm2

$>  build -p OvmfPkg/OvmfPkgX64.dsc -a X64 -t GCC5 -b DEBUG -D TPM2_ENABLE

$> sudo qemu-system-x86_64 -hda fat:rw:hda-content -boot d -m 2048 -enable-kvm -bios OVMF.fd -cpu host,-svm -chardev socket,id=chrtpm,path=/tmp/emulated_tpm/swtpm-sock -tpmdev emulator,id=tpm0,chardev=chrtpm -device tpm-tis,tpmdev=tpm0 -chardev file,path=debug.log,id=edk2-debug -device isa-debugcon,iobase=0x402,chardev=edk2-debug -vga std -serial stdio -device qemu-xhci -device usb-host,vendorid=0x0781,productid=0x5591 -device usb-host,vendorid=0x0781,productid=0x5567
  (Give your own USB device VID-PID)

